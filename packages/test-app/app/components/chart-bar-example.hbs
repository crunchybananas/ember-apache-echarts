<h2>Bar Charts</h2>

<h3>Simple</h3>
<Chart::Bar
  class="border"
  @width="100%"
  @height="200"
  @data={{this.chartData}}
  @noDataText="No data"
/>

<h3>Series</h3>
<Chart::Bar
  class="border"
  @width="100%"
  @height="200"
  @series={{this.seriesData}}
  @noDataText="No data"
  @yAxisScale="shared"
/>

<h3>Grouped</h3>
<Chart::Bar
  class="border"
  @width="100%"
  @height="200"
  @variant="groupedBar"
  @series={{this.seriesData}}
  @noDataText="No data"
/>

<h3>Stacked</h3>
<Chart::Bar
  class="border"
  @width="100%"
  @height="200"
  @variant="stackedBar"
  @series={{this.seriesData}}
  @noDataText="No data"
/>

