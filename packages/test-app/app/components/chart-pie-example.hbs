<h2>Pie &amp; Donut Charts</h2>

<h3>Simple Pie</h3>
<Chart::Pie
  class="border"
  @width="100%"
  @height="200"
  @data={{this.chartData}}
  @noDataText="No data"
/>

<h3>Simple Donut</h3>
<Chart::Pie
  class="border"
  @width="100%"
  @height="200"
  @variant="donut"
  @data={{this.chartData}}
  @noDataText="No data"
/>

<h3>Series Donut</h3>
<Chart::Pie
  class="border"
  @width="100%"
  @height="200"
  @variant="donut"
  @series={{this.seriesData}}
  @noDataText="No data"
/>
